{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/contact.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/contact",
      "destination": "/api/contact",
      "has": [
        {
          "type": "header",
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    { 
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist"
}